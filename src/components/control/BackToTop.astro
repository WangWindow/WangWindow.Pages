---
import { Icon } from "astro-icon/components";
---

<!-- There can't be a filter on parent element, or it will break `fixed` -->
<div class="back-to-top-wrapper hidden lg:block w-15 h-15 absolute right-0 top-0 pointer-events-none">
  <div
    id="back-to-top-btn"
    class="back-to-top-btn flex items-center rounded-2xl overflow-hidden transition text-(--primary) text-4xl font-bold border-0 fixed bottom-40 opacity-100 cursor-pointer transform translate-x-20 scale-90 pointer-events-none"
    onclick="backToTop()"
  >
    <button aria-label="Back to Top" class="btn-card h-15 w-15">
      <Icon name="material-symbols:keyboard-arrow-up-rounded" class="mx-auto text-[1.75rem]" />
    </button>
  </div>
</div>

<script is:raw is:inline>
  function backToTop() {
    window.scroll({ top: 0, behavior: "smooth" });
  }
</script>
